<%= simple_form_for @user, wrapper: "horizontal_form", :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name, input_wrapper_html: { class: "col-xs-4" } %>
  <%= error_span(@user[:name]) %>
  <%= f.input :password, input_wrapper_html: { class: "col-xs-6" } %>
  <%= error_span(@user[:password]) %>
  <%= f.input :email, input_wrapper_html: { class: "col-xs-6" }  %>
  <%= error_span(@user[:email]) %>
  <%= f.input :regist_date, as: :datetime_picker, input_wrapper_html: { class: "col-xs-6" } %>
  <%= error_span(@user[:regist_date]) %>

  <%= f.button :submit, :class => 'btn-default' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn btn-default' %>
<% end %>
