<%= simple_form_for @property, wrapper: "horizontal_form", :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name, input_wrapper_html: { class: "col-xs-4" }  %>
  <%= error_span(@property[:name]) %>
  <%= f.input :price, input_wrapper_html: { class: "col-xs-4" }  %>
  <%= error_span(@property[:price]) %>
  <%= f.input :population, input_wrapper_html: { class: "col-xs-4" }  %>
  <%= error_span(@property[:population]) %>
  <%= f.input :state, input_wrapper_html: { class: "col-xs-4" }  %>
  <%= error_span(@property[:state]) %>
  <%= f.input :region, input_wrapper_html: { class: "col-xs-4" }  %>
  <%= error_span(@property[:region]) %>
  <%= f.input :town, input_wrapper_html: { class: "col-xs-4" }  %>
  <%= error_span(@property[:town]) %>
  <%= f.input :kind, input_wrapper_html: { class: "col-xs-4" }  %>
  <%= error_span(@property[:kind]) %>
  <%= f.input :position, input_wrapper_html: { class: "col-xs-4" }  %>
  <%= error_span(@property[:position]) %>
  <%= f.input :description, as: :text, input_wrapper_html: { class: "col-xs-4" }  %>
  <%= error_span(@property[:description]) %>

  <%= f.button :submit, :class => 'btn-default' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                properties_path, :class => 'btn btn-default' %>
<% end %>
